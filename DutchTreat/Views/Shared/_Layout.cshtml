<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dutch Treat: @ViewBag.Title</title>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/styles.min.css" asp-append-version="true"/>
    </environment>
</head>
<body>
    <header class="container">
        <h1>Welcome to Dutch Treat</h1>
        <menu>
            <ul>
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="App" asp-action="About">About</a></li>
            </ul>
        </menu>
    </header>

    <section>
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>

    <footer class="container">
        <div class="text-center">Copyright 2019 Dutch Treat LLC</div>
    </footer>

    <environment names="Development">
        <script src="~/dist/main-packed.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/dist/main-packed.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", false)
</body>
</html>
